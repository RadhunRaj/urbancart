<%-include("../../views/partials/user/header.ejs")%>


  <style>
    /* General Styles */
.container {
    max-width: 1200px;
    margin: auto;
    padding: 20px;
}

/* Title Styling */
h1.text-center {
    font-size: 2.5rem;
    color: #333;
    margin-bottom: 30px;
}

/* Row Flex Layout */
.row {
    display: flex;
    flex-wrap: nowrap; /* Ensures the image and details stay side by side */
    gap: 30px;
}

/* Left Section (Image) */
.col-md-6:first-child {
    flex: 1; /* Takes up equal space */
}

.col-md-6:first-child img {
    width: 100%; /* Full width of the column */
    height: auto;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border: 2px solid #ddd;
}

/* Right Section (Details) */
.col-md-6:last-child {
    flex: 1.2; /* Slightly more space for details */
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.col-md-6:last-child h4, .col-md-6:last-child p {
    margin: 10px 0;
    color: #555;
    line-height: 1.6;
}

.col-md-6:last-child p strong {
    color: #000;
    font-weight: bold;
}

/* Responsive Design for Smaller Screens */
@media (max-width: 768px) {
    .row {
        flex-wrap: wrap; /* Stack the columns */
    }

    .col-md-6 {
        flex: 1 1 100%; /* Each section takes full width */
        margin-top: 20px;
    }
}


  </style>
   
   <div class="container mt-5">
    <h1 class="text-center"><%= product.productName %></h1>

    <div class="row mt-4">
        <div class="col-md-6">
            <!-- Display product images -->
            <% if (product.productImage && product.productImage.length > 0) { %>
                <img src="/uploads/product-images/<%= product.productImage[0] %>" alt="<%= product.productName %>" class="img-fluid rounded">
            <% } else { %>
                <img src="/uploads/product-images/<%= product.productImage[0] %>" alt="No Image Available" class="img-fluid rounded">
            <% } %>
        </div>
        <div class="col-md-6">
            <h4>Category: <%= product.category.name %></h4>
            <p><strong>Description:</strong> <%= product.description %></p>
            <!-- <p><strong>Brand:</strong> <%= product.brand %></p> -->
            <p><strong>Price:</strong> â‚¹<%= product.salePrice %></p>
            <p><strong>Size:</strong> <%= product.size %></p>
            <p><strong>Quantity:</strong> <%= product.quantity %></p>
            <!-- <p><strong>Status:</strong> <%= product.status %></p> -->
            <button class="btn btn-primary" onclick="addToCart('<%= product.id %>')">Add to Cart</button><br>
            <button class="btn btn-success" onclick="buyNow('<%= product.id %>')">Buy Now</button>
        </div>
    </div>
</div>
