<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>URBANCART</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.6/dist/sweetalert2.min.css">
    <script src="https://kit.fontawesome.com/16d4885483.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <style>
        /* Custom styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
        }
        .navbar {
            background-color: #343a40;
            color: #ffffff;
        }
        .navbar-aside {
            background-color: black;
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            overflow-y: auto;
        }
        .navbar-aside .brand-wrap {
            padding: 20px;
            text-align: center;
            display: block;
        }
        .navbar-aside img.logo {
            max-width: 100%;
            height: auto;
        }
        .menu-item {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        .menu-item a.menu-link {
            display: block;
            padding: 10px 20px;
            color: #ffffff;
            text-decoration: none;
            transition: all 0.3s;
        }
        .menu-item a.menu-link:hover,
        .menu-item a.menu-link.active {
            background-color: #495057;
            color: #ffffff;
        }
        .main-wrap {
            margin-left: 250px;
            padding: 20px;
            background-color: #ffffff;
            min-height: 100vh;
        }
        .dropdown-menu {
            background-color: #ffffff;
            border: 1px solid #ced4da;
        }
        .dropdown-item:hover {
            background-color: #495057;
            color: #ffffff;
        }
        .header-icons {
            font-size: 1.2rem;
            color: #ffffff;
            margin-right: 15px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="navbar-aside">
        <div class="aside-top">
            <a href="#" class="brand-wrap">
                <img src="#" class="logo" alt="URBANCART">
            </a>
        </div>
        <nav>
            <ul class="menu-aside">
                <li class="menu-item"><a class="menu-link" href="/admin"><i class="material-icons">home</i> Dashboard</a></li>
                <li class="menu-item"><a class="menu-link" href="/admin/users"><i class="material-icons">person</i> Customers</a></li>
                <li class="menu-item"><a class="menu-link" href="/admin/category"><i class="material-icons">category</i> Category</a></li>
                <li class="menu-item"><a class="menu-link" href="/admin/brands"><i class="material-icons">stars</i> Brands</a></li>
                <li class="menu-item"><a class="menu-link" href="/admin/addProducts"><i class="material-icons">add_box</i> Add Product</a></li>
                <li class="menu-item"><a class="menu-link" href="/admin/products"><i class="material-icons">shopping_bag</i> Products</a></li>
                <li class="menu-item"><a class="menu-link" href="/admin/coupon"><i class="material-icons">class</i> Coupon</a></li>
                <li class="menu-item"><a class="menu-link" href="/admin/banner"><i class="material-icons">photo_size_select_actual</i> Banner</a></li>
                <li class="menu-item"><a class="menu-link" href="/admin/orderList"><i class="material-icons">shopping_cart</i> Orders</a></li>
            </ul>
        </nav>
    </div>

    <!-- Main Content -->
    <main class="main-wrap">
        <!-- Header -->
        <header class="navbar navbar-expand-lg">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <button class="btn btn-icon btn-mobile" data-trigger="#offcanvas_aside"><i class="material-icons">menu</i></button>
                <div class="d-flex align-items-center">
                    <!-- <span class="header-icons"><i class="material-icons">notifications</i></span>
                    <span class="header-icons"><i class="material-icons">settings</i></span> -->
                    <div class="dropdown">
                        <a class="dropdown-toggle d-flex align-items-center" data-bs-toggle="dropdown" href="#" aria-expanded="false">
                            <!-- <img class="img-xs rounded-circle" src="" alt="Admin"> -->
                             <p>Admin</p>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end">
                            <a class="dropdown-item text-danger" href="/admin/logout"><i class="material-icons">exit_to_app</i> Logout</a>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>